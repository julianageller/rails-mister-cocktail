<p id="notice"><%= notice %></p>

 <div class="banner cocktail">
    <div class="row">
    <h1 class="show">New Caipirinha</h1>
    <div class="links" style="text-align:right; padding-top: 7px; padding-left: 30px">
      <%= link_to raw('<i class="fas fa-cocktail"></i>'), cocktails_path, class: 'back' %>
    </div>
    </div>
    <div class="spacer10"></div>

    <div class="form">
    <%= simple_form_for(@cocktail) do |f| %>
      <% if @cocktail.errors.any? %>
        <div class="errors-container">
          <ul>
            <% @cocktail.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :image %>
        <%= f.input :image_cache, as: :hidden %>
      </div>

      <div class="form-actions">
        <%= f.submit "Save", class: "btn btn-primary my-2 my-sm-0 ml-2"%>
      </div>
  <% end %>
  </div>
</div>
